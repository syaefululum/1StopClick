<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bggradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container"
        tools:context=".SignUpActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/contentContainer">
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp" app:srcCompat="@mipmap/kotlin_icon" android:id="@+id/imageView"
                    android:layout_gravity="center" android:layout_marginTop="10dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/formSignUp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="10dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        app:backgroundTint="@color/cardview_light_background"
                        android:id="@+id/etFirstName"
                        android:hint="First Name"
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#FFFFFF"
                        android:hapticFeedbackEnabled="false"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        app:backgroundTint="@color/cardview_light_background"
                        android:id="@+id/etLastName"
                        android:hint="Last Name"
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#FFFFFF"
                        android:hapticFeedbackEnabled="false"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/etEmail"
                        android:hint="Email"
                        app:backgroundTint="@color/cardview_light_background"
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#FFFFFF"
                        android:hapticFeedbackEnabled="false"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/etPassword"
                        android:hint="Password"
                        app:backgroundTint="@color/cardview_light_background"
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#FFFFFF"
                        android:hapticFeedbackEnabled="false"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/etConfirmPassword"
                        android:hint="Confirm Password"
                        app:backgroundTint="@color/cardview_light_background"
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#FFFFFF"
                        android:hapticFeedbackEnabled="false"/>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvBtnSignUp"
                        app:cardBackgroundColor="#609fe6"
                        app:cardCornerRadius="15dp"
                        android:layout_marginTop="30dp">
                    <TextView
                            android:text="Sign Up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bottomContainer"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center">
                    <TextView
                            android:text="Already have an account? "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvAlready" android:layout_weight="1"
                            android:textColor="#FFFFFF"/>
                    <TextView
                            android:text="Sign In Now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvBtnSignInNow"
                            android:layout_weight="1"
                            android:textColor="#e67749"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
